<!doctype html>
<html>

<head>
    <title>Eventful</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="connect.css">

</head>

<body>
    <div class="container">
        <header>
            <div class="center">
                <% if (user.local.email) { %>
                    <div id="cloud">
                        <h3 class="interface"><strong>Welcome</strong> <%= user.local.email %><br></h3>
                        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
                        <a href="/mysetting" class="btn btn-default btn-sm">Settings</a>
                        <% } else { %>
                            <a href="/connect/local" class="btn btn-default">Connect Local</a>
                            <% } %>
                    </div>
                    <div class="center2">
                        <div id="cloud"></div>
                    </div>
                    <div class="center3">
                        <div id="cloud"></div>
                    </div>
            </div>
        </header>

        <div class="row">
            <div>
                <a id="location">
                    <h2>> Connect < </h2>
                </a>
                <div class="hidden map" id="map" style="height: 400px;"></div>
                <a href="/myprofile">
                    <p>> Create Gather Round < </p>
                </a>
                <section class="msg-board">
                    <ul class="messages">
                        <li id="comments">See What's Happening In The Area</li>


                        <!-- var location = "42.0789268,-71.0040655" -->

                        <% for(var i=0; i<messages.length; i++) {%>

                            <!-- if (messages[i].location === location ) -->

                            <li class="message">
                                <span><strong>
                                        <%= messages[i].name %>:
                                    </strong></span>
                                <span>
                                    <%= messages[i].msg %>
                                </span><br>
                                <ul>
                                    <% for(var j=0; j< messages[i].replies.length; j++) {%>

                                        <li>
                                            <% Object.keys(messages[i].replies[j]).forEach(function(email) { %>
                                                <strong>
                                                    <%= email %>:
                                                </strong>
                                                <%= messages[i].replies[j][email] %><br>
                                                    <% }); %>
                                        </li>
                                        <% } %>
                                </ul>
                                <section id="replysection_<%=messages[i]._id%>" class="reply-section hidden">
                                    <input id="input_<%=messages[i]._id%>" type="text" name="" maxlength="200">
                                    <button class="reply-submit" id="<%=messages[i]._id%>">Submit</button>
                                </section>


                                <span id="replyspan_<%=messages[i]._id%>" class="reply">Reply</span>
                            </li>
                            <% } %>
                    </ul>
                    <!-- }  -->

                    <% if (user.local.email) { %>
                        <form id="messageForm" action="/messages" method="POST">
                            <input type="text" value="<%= user.local.email %>" name="name" readonly>
                            <input type="text" placeholder="message" name="msg" maxlength="200">
                            <% } %>
                                <input type="hidden" id="location-input" name="location" value="">
                                <button type="submit">Submit</button>
                        </form>
            </div>
            </section>
        </div>

        <script
            src="https://maps.googleapis.com/maps/api/js?key=[apikey]&libraries=places"></script>
        <script src="main.js"></script>
</body>

</html>